<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.hideosd" version="1.0.1" name="Hide Video OSD" provider-name="Kevwag">
	<requires>
		<import addon="xbmc.python" version="3.00.0" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="main.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="startup" />
	<extension point="xbmc.addon.metadata">
		<description>Autohide video osd after defined period of inactivity. Timeout can be set in the addon settings</description>
		<summary lang="en">Autohide Video OSD</summary>
		<platform>all</platform>
		<license>GPL-3.0-only</license>
		<forum>-</forum>
		<website>https://github.com/jevwag/script.hideosd</website>
		<source>https://github.com/jevwag/script.hideosd.git</source>
		<assets>
			<icon>icon.png</icon>
		</assets>
		<news>
v1.0.1
-Fix repo source URLs
v1.0.0
-Rebuilt for Kodi 20.x (Nexus)
		</news>
	</extension>
</addon>
